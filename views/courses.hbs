<div id="courses-div">
    <h1 class="mt-4 mb-5">Courses</h1>
    <div class="courses-div row row-cols-1 row-cols-md-2 g-4">
        {{#each courses as |course| }}
            <div id="course-{{course.id}}" class="col">
                <div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
                    <div class="card-header">
                        <h3>{{course.name}}</h3>
                    </div>
                        <div class="card-body">
                            <p class="card-title">{{course.type}}</p>
                            <a class="btn btn-light" href="/courses/{{course.id}}">See Course</a>
                            <form class="d-inline" action="/courses/{{course.id}}/delete" method="post">
                                <button type="submit" class="btn btn-danger">Delete</a>
                            </form>
                        </div>
                </div>  
            </div>
        {{/each}}
    </div>
</div>
